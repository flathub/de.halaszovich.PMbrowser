{
  "app-id": "de.halaszovich.PMbrowser",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.4",
  "sdk": "org.kde.Sdk",
  "command": "QtPMbrowser",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--filesystem=xdg-documents",
    "--filesystem=/media:ro",
    "--filesystem=/run/media:ro",
    "--device=dri"
  ],
  "modules": [
    "pypi-dependencies.json",
    {
      "name": "Pmbrowser",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=RelWithDebInfo", "-DBUILD_DOCS=on"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/ChrisHal/PMbrowser.git",
          "commit": "db2bc698cae45e25b19b6795cef4b73fe0e40c84"
        }
      ]
    }
  ]
}

